<ci:RuleSettingsControlBase x:TypeArguments="local:TeacherIsConfig" x:Class="ExtraIsland.Automations.Rules.TeacherIs"
                            xmlns="https://github.com/avaloniaui"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:local="clr-namespace:ExtraIsland.Automations.Rules"
                            xmlns:ci="http://classisland.tech/schemas/xaml/core"
                            xmlns:controls="clr-namespace:ExtraIsland.Controls"
                            mc:Ignorable="d"
                            d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TeacherIs}}"
                Orientation="Horizontal">
        <TextBox Text="{Binding Settings.Teacher, Mode=TwoWay}" MinWidth="40" MaxWidth="100" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <controls:FullLogoGrayScale Margin="4,0,0,0" 
                                    Height="20" 
                                    Opacity="0.5"/>
    </StackPanel>
</ci:RuleSettingsControlBase>
